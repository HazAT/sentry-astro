---
import Layout from "../layouts/Layout.astro";
import Content from "../components/Content.astro";
import HustonError from "../components/HustonError.jsx";
import Huston from "../components/Huston.jsx";
---

<Layout title="Astro">
  <ul role="list" class="link-card-grid">
    <Content />
  </ul>
  <HustonError width={80} height={62}/>
  <Huston width={80} height={62}/>
</Layout>

<style>
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
